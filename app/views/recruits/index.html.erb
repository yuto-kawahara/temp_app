<ul>
  <% @recruits.each do |recruit| %>
    <li>
      <%= link_to recruit_path(recruit) do %>
        <%= attachment_image_tag recruit.user, :icon_image, :fill, 40, 40, fallback: "person-circle-outline.svg", size:"40x40" %>
        <%= recruit.user.nickname %> <br>
        <%= recruit.recruit_status_i18n %>
        <%= recruit.title %>
        <%= recruit.hold_datetime %>
      <% end %>
    </li>
  <% end %>
</ul>

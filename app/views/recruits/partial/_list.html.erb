<% reserves.each do |reserve| %>
  <% user = reserve.user %>
  <% status = reserve.reserve_status %>
  <%= attachment_image_tag user, :icon_image, :fill, 40, 40, fallback: "person-circle-outline.svg", size:"40x40" %>
  <%= user.nickname %>
  <% case status
       when "approve_reserve" %>
      <%= render 'reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "active", red_active: "no_active" %>
    <% when "reject_reserve" %>
      <%= render 'reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "no_active", red_active: "active" %>
    <% else %>
      <%= render 'reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "no_active", red_active: "no_active" %>
  <% end %>
<% end %>

<style>
a.btn_border_green.active {
  color: #fff;
  background: #30ba4e;
}
a.btn_border_green.no_active {
  color: #30ba4e;
  background: #fff;
}

a.btn_border_red.active {
  color: #fff;
  background: #DC3545;
}

a.btn_border_red.no_active {
  color: #DC3545;
  background: #fff;
}


a.btn_border_green {
  color: #30ba4e;
  border: 2px solid #30ba4e;
  border-radius: 20px;
  background: #fff;
}

a.btn_border_green:hover {
  color: #fff;
  background: #30ba4e;
}

a.btn_border_red {
  color: #DC3545;
  border: 2px solid #DC3545;
  border-radius: 20px;
  background: #fff;
}

a.btn_border_red:hover {
  color: #fff;
  background: #DC3545;
}
</style>